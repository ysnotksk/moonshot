          .ms-image-link__background
            img.ms-image-link__image(
              loading="lazy"
              src="https://images.unsplash.com/photo-1517245386807-bb43f82c33c4?w=600&h=400&fit=crop&q=80"
              alt="Application"
            )
          .ms-image-link__overlay
          .ms-image-link__content
            .ms-text-4xl.ms-font-bold.ms-mb-2 01
            h3.ms-image-link__title Application
            p.ms-image-link__description Submit resume and cover letter

        //- Step 2
        a.ms-image-link.ms-image-link--sm(href="#step2")
          .ms-image-link__background
            img.ms-image-link__image(
