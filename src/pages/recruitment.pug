          .ms-image-link__content
            .ms-text-4xl.ms-font-bold.ms-mb-2 03
            h3.ms-image-link__title Technical
            p.ms-image-link__description Skills assessment and pairing

        //- Step 4
        a.ms-image-link.ms-image-link--sm(href="#step4")
