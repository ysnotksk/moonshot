    .example-nav {
      max-width: 1280px;
      margin: 0 auto;
      padding: 3rem 1.5rem;
    }
    .example-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
      gap: 2rem;
      margin-top: 2rem;
    }

