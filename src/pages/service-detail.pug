              .sidebar-value SOC 2, ISO 27001, GDPR, HIPAA

          .sidebar-card
            h3.sidebar-card__title Related Services
            .sidebar-item
              a.sidebar-value(href="service-page.html#security" style="color: var(--ms-brand-primary); text-decoration: underline") Security & Compliance
            .sidebar-item
              a.sidebar-value(href="service-page.html#analytics" style="color: var(--ms-brand-primary); text-decoration: underline") Data Analytics & BI
            .sidebar-item
              a.sidebar-value(href="service-page.html#transformation" style="color: var(--ms-brand-primary); text-decoration: underline") Digital Transformation

          a.ms-btn.ms-btn--primary.ms-btn--lg(href="demo.html" style="width: 100%; text-align: center") Book a Free Consultation

