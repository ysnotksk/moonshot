extends _layouts/default

- var title = "Contact Us - TechCorp"
- var description = "Get in touch with TechCorp. We'd love to hear from you about your next project."
- var activeNav = "contact"

block append headStyles
  style.
    .contact-grid {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: var(--ms-space-16);
      align-items: start;
    }
    @media (max-width: 768px) {
      .contact-grid {
        grid-template-columns: 1fr;
        gap: var(--ms-space-10);
      }
    }
    .contact-info {
      display: flex;
      flex-direction: column;
      gap: var(--ms-space-8);
    }
    .contact-info__item {
      display: flex;
      gap: var(--ms-space-4);
      align-items: flex-start;
    }
    .contact-info__icon {
      flex-shrink: 0;
      width: 40px;
      height: 40px;
      display: flex;
      align-items: center;
      justify-content: center;
      background-color: var(--ms-bg-secondary);
      border-radius: var(--ms-radius-md);
      color: var(--ms-text-primary);
    }
    .contact-info__label {
      font-size: var(--ms-text-sm);
      font-weight: var(--ms-font-semibold);
      color: var(--ms-text-primary);
      margin-bottom: var(--ms-space-1);
      text-transform: uppercase;
      letter-spacing: var(--ms-tracking-wider);
    }
    .contact-info__value {
      font-size: var(--ms-text-base);
      color: var(--ms-text-secondary);
      line-height: var(--ms-leading-relaxed);
    }
    .contact-info__value a {
      color: var(--ms-text-secondary);
      text-decoration: none;
      border-bottom: 1px solid var(--ms-border-light);
      transition: border-color 0.2s ease;
    }
    .contact-info__value a:hover {
      border-color: var(--ms-text-primary);
      color: var(--ms-text-primary);
    }
    .contact-form-card {
      background-color: var(--ms-bg-primary);
      border: 1px solid var(--ms-border-light);
      border-radius: var(--ms-radius-lg);
      padding: var(--ms-space-10);
    }
    .contact-form-card__title {
      font-size: var(--ms-text-xl);
      font-weight: var(--ms-font-semibold);
      color: var(--ms-text-primary);
      margin: 0 0 var(--ms-space-2) 0;
    }
    .contact-form-card__subtitle {
      font-size: var(--ms-text-sm);
      color: var(--ms-text-tertiary);
      margin: 0 0 var(--ms-space-8) 0;
    }
    .form-row {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: var(--ms-space-4);
    }
    @media (max-width: 480px) {
      .form-row {
        grid-template-columns: 1fr;
      }
    }
    @media (max-width: 768px) {
      .contact-form-card {
        padding: var(--ms-space-6);
      }
    }
    .map-section {
      margin-top: var(--ms-space-16);
      border-radius: var(--ms-radius-lg);
      overflow: hidden;
      border: 1px solid var(--ms-border-light);
      height: 320px;
      background-color: var(--ms-bg-secondary);
      display: flex;
      align-items: center;
      justify-content: center;
      color: var(--ms-text-tertiary);
      font-size: var(--ms-text-sm);
    }

block append jsonLd
  script(type="application/ld+json").
    {
      "@context": "https://schema.org",
      "@type": "ContactPage",
      "name": "Contact TechCorp",
      "url": "https://example.com/contact",
